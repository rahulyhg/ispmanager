div(id="{$_name}" class="{$class}" style="{$style}")
	label.h4 Plans & User Info
	.well.well-sm
		.row
			.col-md-4.col-lg-4.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label Plan:
				{$plan}
			.col-md-4.col-lg-4.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label Radius User Name:
				{$radius_username}
			.col-md-4.col-lg-4.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label Radius Password:
				{$radius_password}
		br
		.row
			.col-md-3.col-lg-3.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label First Name:
				{$first_name}
			.col-md-3.col-lg-3.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label Last Name:
				{$last_name}
			.col-md-3.col-lg-3.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label Mobile No:
				{$mobile_no}
			.col-md-3.col-lg-3.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label Email id:
				{$email_id}	
		br
		.row
			.col-md-4.col-lg-4.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				{$create_invoice}
			.col-md-4.col-lg-4.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				{$is_invoice_date_first_to_first}
			.col-md-4.col-lg-4.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label Grace Period in days
				{$grace_period_in_days}

	h4 Billing Address
	.row.well.well-sm
		.col-md-8.col-lg-8.col-sm-12.col-xs-12
			.row
				.col-md-6.col-lg-6.col-sm-12.col-xs-12.atk-form-field.atk-form-row
					label Country:
					{$billing_country}
				.col-md-6.col-lg-6.col-sm-12.col-xs-12.atk-form-field.atk-form-row
					label State:
					div.atk-form-field.atk-form-row
						{$billing_state}
				.col-md-6.col-lg-6.col-sm-12.col-xs-12.atk-form-field.atk-form-row
					label City:
					{$billing_city}
				.col-md-6.col-lg-6.col-sm-12.col-xs-12.atk-form-field.atk-form-row
					label Pin Code:
					{$billing_pincode}
		.col-md-4.col-lg-4.col-sm-12.col-xs-12.atk-form-field.atk-form-row
			label Address:
			{$billing_address}
	h4 Shipping Address
	.well.well-sm
		.row
			.col-md-12.atk-form-field.atk-form-row
				{$shipping_address_same_as_billing_address}
		.row
			.col-md-8.col-lg-8.col-sm-12.col-xs-12
				.row
					.col-md-6.col-lg-6.col-sm-12.col-xs-12.atk-form-field.atk-form-row
						label Country:
						{$shipping_country}
					.col-md-6.col-lg-6.col-sm-12.col-xs-12.atk-form-field.atk-form-row
						label State:
						div.atk-form-field
							{$shipping_state}
					.col-md-6.col-lg-6.col-sm-12.col-xs-12.atk-form-field.atk-form-row
						label City:
						{$shipping_city}
					.col-md-6.col-lg-6.col-sm-12.col-xs-12.atk-form-field.atk-form-row
						label Pin Code:
						{$shipping_pincode}
			.col-md-4.col-lg-4.col-sm-12.col-xs-12.atk-form-field.atk-form-row
				label Address:
				{$shipping_address}
{$Content}