.xepan-tool-options(id='{$_name}' style="display:none" for-xepan-component='xavoc/ispmanager/Tool_CurrentPlan')
	.xepan-cms-group-panel.clearfix
		h3.collapsed(data-toggle='collapse', data-target='#collapse-carousel', aria-expanded='false')
			span Show Current Plan Status
		#collapse-carousel.xepan-cms-tools-bar-panel.row-fluid.collapse.in
			.panel-body
				table.table.table-condensed.table-hover
					tr
						td 
							| Show Data

						td
							input(type='checkbox', name='show_data', data-attr='show_data')

					tr
						td 
							| Show Validity

						td
							input(type='checkbox', name='show_validity', data-attr='show_validity')

					tr
						td 
							| Show BandWidth

						td
							input(type='checkbox', name='show_bandwith', data-attr='show_bandwith')

					tr
						td 
							| Show FUP

						td
							input(type='checkbox', name='show_fup', data-attr='show_fup')


script(type='text/javascript').
	$('\\#{$_name} [data-attr]').on('change',function(){
		$(current_selected_component).attr($(this).data('attr'),$(this).val());
	});
	$('\\#{$_name}').on('show',function(event){
		$('\\#{$_name} [data-attr]').each(function(index,value){
			$(this).val($(current_selected_component).attr($(this).data('attr')));
		});
	});