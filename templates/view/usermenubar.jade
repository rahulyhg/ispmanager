div(id="{$_name}" class="{$class} ds-user-navbar" style="{$style}")
	nav.navbar
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='dashboard')
					img(src='shared/apps/xavoc/ispmanager/templates/img/logo.png')
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav
					{rows}{row}
					li(data-page='user_{$key}' class="{$active_menu}")
						a(href='user_{$key}') {$name}
					{/}{/}
				//- ul.nav.navbar-nav
				//- 	li
				//- 		h5|Welcome {$username}
				ul.nav.navbar-nav.navbar-right
					li
						a.btn.btn-primary.btn-sm(href="?page={$url}" style="padding:2px;margin: 17px")
							|Change Plan
					li
						a(href="#" style="padding:10px; box-shadow:inset 0px 0px 1px 2px #ccc;border-radius:50%;" title="{$user_name}")
							img(src="{$user_dp}" style="max-height:60px;max-width:40px;height:40px;" class="ds-dp")
					li
						a(style="padding:10px;" href="logout")
							div.btn.btn-danger()
								i.glyphicon.glyphicon-off
								|&nbsp;Logout
	{$Content}

style.
	.navbar-toggle {
		align-self: flex-start;
		background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
		border: 1px solid transparent;
		border-radius: 0.25rem;
		font-size: 1.25rem;
		line-height: 1;
	}	
	.navbar-toggle {
		border-color: rgba(0, 0, 0, 0.1);
	}
	.icon-bar {
		border: 1px solid #ddd;
	}